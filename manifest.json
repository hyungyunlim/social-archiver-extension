{
  "manifest_version": 3,
  "name": "Social Archiver",
  "version": "1.0.0",
  "description": "Archive and preserve social media content from Facebook, Instagram, and LinkedIn",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.instagram.com/*",
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.linkedin.com/*"
      ]
    }
  ]
}
